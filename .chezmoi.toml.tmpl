# vi: ft=toml

{{ $email := promptStringOnce . "email" "Email address" -}}

{{- $computerType := promptStringOnce . "personal" "Type of computer used" -}}

{{- $bkpdrv := promptStringOnce . "none" "Main backup drive label" -}}

{{- $termFontSize := promptStringOnce . "18" "Your terminal font size" -}}

[data]
    email = {{ $email | quote }}
    computerType = {{ $computerType | quote }}
    bkpdrv = {{ $bkpdrv | quote }} 
    termFontSize = {{ $termFontSize | quote }}

encryption = "gpg"
[gpg]
    recipient = {{ $email | quote }}
